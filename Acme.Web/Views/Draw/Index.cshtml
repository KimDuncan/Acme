@model List<Acme.DataLayer.Models.ParticipantDraw>
@{
  ViewData["Title"] = "Home Page";
}

<div class="text-center">
  <h1 class="display-4">registered Participant</h1>

  <table style="width:100%" id="ParticipantDraw">
    <thead>
      <tr>
        <td>
          Firstname
        </td>
        <td>
          Lastname
        </td>
        <td>
          DateOfBirth
        </td>
        <td>
          Email
        </td>
        <td>
          SerialNumber
        </td>
      </tr>
    </thead>
    <tbody>
      @foreach (var participant in Model)
      {
      <tr>
        <td>
          @participant.Firstname
        </td>
        <td>
          @participant.Lastname
        </td>
        <td>
          @participant.DateOfBirth
        </td>
        <td>
          @participant.Email
        </td>
        <td>
          @participant.SerialNumber
        </td>
      </tr>
      }
    </tbody>
  </table>

</div>

<script>
  $(document).ready(function () {
    $('#ParticipantDraw').DataTable();
  });
</script>